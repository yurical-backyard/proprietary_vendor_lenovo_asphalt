on post-fs-data
    chown system system /sys/class/backlight/panel0-hbm/brightness
    chown system system /sys/devices/platform/soc/ae90000.qcom,dp_display/prefer_mode
    chown system system /sys/devices/platform/soc/ae90000.qcom,dp_display/hpd_sim
    chown system system /sys/devices/platform/soc/ae90000.qcom,dp_display/mode_index
    chmod 0222 /sys/devices/platform/soc/ae90000.qcom,dp_display/prefer_mode
    chmod 0666 /sys/devices/platform/soc/ae90000.qcom,dp_display/hpd_sim
    chmod 0666 /sys/devices/platform/soc/ae90000.qcom,dp_display/mode_index

service display_hal_service /vendor/bin/hw/vendor.lenovo.hardware.display@1.0-service
    class hal
    user system
    group system



